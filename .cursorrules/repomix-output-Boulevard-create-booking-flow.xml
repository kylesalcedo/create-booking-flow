                    <Button
                        variant="text"
                        color="secondary"
                        className={classes.leftPanelBottomBtn}
                        onClick={onAddAnotherServiceClick}
                        sx={{
                            width: 'auto',
                        }}
                    >
                        Add another
                    </Button>
                )}
                {allowRemoveService && (
                    <Button
                        variant="text"
                        color="secondary"
                        className={classes.leftPanelBottomBtn}
                        onClick={onRemoveInternal}
                        sx={{
                            width: 'auto',
                        }}
                    >
                        Remove
                    </Button>
                )}
                {hasAddons && allowEditAddonService && (
                    <Button
                        variant="text"
                        color="secondary"
                        className={classes.leftPanelBottomBtn}
                        onClick={onEditAddonClick}
                        sx={{
                            width: 'auto',
                            textTransform: 'none',
                        }}
                    >
                        Edit add-ons
                    </Button>
                )}
